<!DOCTYPE html>
<html>
<head>
  <title>Chirp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,100' rel='stylesheet' type='text/css'>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/gsap/1.16.1/TweenMax.min.js"></script>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/gsap/1.16.1/TimelineMax.min.js"></script>
  <script src="//js.pusher.com/2.2/pusher.min.js" type="text/javascript"></script>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

  <div class="stage">
    <div class="card">
      <div class="card__main">
        <span>Card A</span>
      </div>
      <div class="card__secondary">
        <span>Card A secondary</span>
      </div>
    </div>
    <div class="card">
      <div class="card__main">
        <span>Card B</span>
      </div>
      <div class="card__secondary">
        <span>Card B secondary</span>
      </div>
    </div>
    <div class="card">
      <div class="card__main">
        <span>Card C</span>
      </div>
      <div class="card__secondary">
        <span>Card C secondary</span>
      </div>
    </div>
    <div class="card">
      <div class="card__main">
        <span>Card D</span>
      </div>
      <div class="card__secondary">
        <span>Card D secondary</span>
      </div>
    </div>
    <div class="card">
      <div class="card__main">
        <span>Card E</span>
      </div>
      <div class="card__secondary">
        <span>Card E secondary</span>
      </div>
    </div>
  </div>

</body>
</html>
